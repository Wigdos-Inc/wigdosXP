rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{username} {
      allow read, write: if true; // open access for now
    }

    match /game_saves/{userId} {
      allow read, write: if true;
    }

    // WigTube collection with map-based documents
    match /wigtube/{document} {
      allow read: if true; // Anyone can read
      allow write: if true; // Anyone can write (for now - should be restricted later)
    }

    // User achievements collection
    match /user_achievements/{username} {
      allow read, write: if true; // Open access for now
    }

    // Legacy winesweeper badges collection (for backwards compatibility)
    match /winesweeper_badges/{username} {
      allow read, write: if true; // Open access for now
    }
  }
}
