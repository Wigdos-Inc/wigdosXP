rules_version = '2';

// Firebase Storage Security Rules for WigTube
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload videos and thumbnails
    match /videos/{username}/{fileName} {
      allow read: if true; // Anyone can read/view videos
      allow write: if request.auth != null; // Only authenticated users can upload
      allow delete: if request.auth != null && request.auth.token.email.split('@')[0] == username; // Only owner can delete
    }
    
    match /thumbnails/{username}/{fileName} {
      allow read: if true; // Anyone can read/view thumbnails
      allow write: if request.auth != null; // Only authenticated users can upload
      allow delete: if request.auth != null && request.auth.token.email.split('@')[0] == username; // Only owner can delete
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
